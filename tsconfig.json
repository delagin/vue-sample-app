{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["resources/client/*"]
    }
  },
  "include": [
    "resources/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "vendor"
  ]
}
